{
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "classmap": [
      "app/Controllers",
      "app/Models",
      "app/core"
    ],
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:auth": "phpunit --colors=always test/Controllers/AuthControllerTest.php",
    "test:categoria": "phpunit --colors=always test/Controllers/CategoriaControllerTest.php",
    "test:sede": "phpunit --colors=always --colors=always test/Controllers/SedeControllerTest.php",
    "test:usuario": "phpunit --colors=always --colors=always test/Controllers/UsuariosControllerTest.php",
    "test:controllers": "phpunit --colors=always test/Controllers/",
    "test:coverage": "phpunit --coverage-html coverage"
  }
}